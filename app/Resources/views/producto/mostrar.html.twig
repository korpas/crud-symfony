{% extends 'base.html.twig' %}
{% block body %}
    {{ parent() }}

    <ul>
        <li><a href="{{ path('app_producto_insert') }}">AÃ±adir Producto</a></li>

    </ul>
    <table>
        <thead>
        <tr>
            <th>Id</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Precio</th>
            <th>Disponibilidad</th>
            <th>Creado</th>
            <th>Actualizado</th>
        </tr>
        </thead>
        <tbody>
        {% for producto in productos %}
            <tr>
                <td>{{ producto.id }}</td>
                <td>{{ producto.nombre }}</td>
                <td>{{ producto.descripcion }}</td>
                <td>{{ producto.precio }}</td>
                <td>{{ producto.disponibilidad }}</td>
                <td>{{ producto.createdAt|date('d/m/Y') }}</td>
                <td>{{ producto.updatedAt|date('d/m/Y') }}</td>
                <td><a href="{{ path('app_producto_update',{ 'id':producto.id}) }}">Editar</a></td>
                <td><a href="{{ path('app_producto_doDelete',{ 'id':producto.id}) }}">Borrar</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}